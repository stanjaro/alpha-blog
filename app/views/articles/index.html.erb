<h1 align="center">All Articles</h1>
	<div class="col-xs-9">
	<% @articles.each do |article|%>
	<div class="row">
		<div class="col-xs-10 col-xs-offset-2">
			<div class="well well-lg">
				<div>
					<h1><%= link_to article.title, article_path(article) %></h1>
				</div>
				<div>
					<%= truncate(article.description, length: 100) %>
				</div>
			ID# <%= article.id %>
			<%= link_to "Edit", edit_article_path(article), class: "btn btn-xs btn-primary" %>
			<%= link_to "Show", article_path(article), class: "btn btn-xs btn-success" %> 
			<%= link_to "Delete", article_path(article), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-xs btn-danger"  %>
		</div>
		</div>
	</div>
	<%end%>
	</div>
	<div class="col-xs-3">
			CHAT AREA
	</div>
	
